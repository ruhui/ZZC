<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_nick_change_acitivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/windowbackcolor"
    tools:context="com.zzcar.zzc.activities.NickChangeAcitivity">

    <com.zzcar.zzc.views.widget.NavBar2_
        android:id="@+id/mNavbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:gravity="bottom"
        android:background="@color/white"
        app:title_res="@string/tab_mine">
    </com.zzcar.zzc.views.widget.NavBar2_>

    <EditText
        android:id="@+id/edtNick"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:gravity="center|left"
        android:paddingLeft="10dp"
        android:hint="请输入内容"
        android:textSize="14sp"
        android:textColor="@color/color_333333"/>


    <TextView
        android:id="@+id/saveValue"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_red_radio"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"/>


</LinearLayout>
