<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowbackcolor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.zzcar.zzc.activities.ForgetPasswordActivity">

    <com.zzcar.zzc.views.widget.NavBar2_
        android:id="@+id/mNavbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:gravity="bottom"
        android:background="@color/white"
        app:title_res="@string/tab_mine">
    </com.zzcar.zzc.views.widget.NavBar2_>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginTop="16dp"
        android:id="@+id/relativeLayout7"
        android:layout_below="@+id/mNavbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <EditText
            android:id="@+id/editText10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="新密码"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:layout_marginRight="20dp"
            android:inputType="textPassword"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:gravity="center|left"/>
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/relativeLayout7"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_below="@+id/line"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout8">




        <EditText
            android:id="@+id/editText11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="确认密码"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:layout_marginRight="20dp"
            android:inputType="textPassword"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:gravity="center|left" />
    </RelativeLayout>


    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="phone"
        android:background="@color/white"
        android:layout_below="@+id/relativeLayout8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:hint="请输入手机号码"
        android:backgroundTint="@null"
        android:textSize="14sp"
        android:textColor="@color/color_333333"
        android:paddingLeft="20dp">

    </EditText>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/edtPhone"
        android:id="@+id/view6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_below="@+id/view6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout9">

        <EditText
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:background="@null"
            android:textSize="14sp"
            android:hint="请输入验证码"
            android:layout_marginLeft="20dp"
            android:textColor="@color/color_333333"
            android:id="@+id/editText7"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/textView91"
            android:layout_toStartOf="@+id/textView91" />

        <TextView
            android:text="获取验证码"
            android:layout_width="127dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView91"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/app_red"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/txtCommit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape_red_radio"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="确认提交"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:layout_below="@+id/relativeLayout9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
