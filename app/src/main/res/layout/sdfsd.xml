<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout10"
        android:layout_marginTop="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView178"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/app_red"
            android:layout_marginRight="28dp"
            android:layout_marginEnd="28dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView179"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/shape_radio_line_red"
            android:gravity="center"
            android:text="支付定金"
            android:textColor="@color/app_red"
            android:textSize="@dimen/sp_14"
            android:layout_alignBaseline="@+id/textView178"
            android:layout_alignBottom="@+id/textView178"
            android:layout_toLeftOf="@+id/textView178"
            android:layout_toStartOf="@+id/textView178" />


        <TextView
            android:id="@+id/textView177"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计  ¥0"
            android:textColor="@color/app_red"
            android:textSize="@dimen/sp_14"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView180"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="待支付"
            android:layout_alignBaseline="@+id/textView178"
            android:layout_alignBottom="@+id/textView178"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>





</LinearLayout>