<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/imageView54"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView227"
            android:layout_alignTop="@+id/textView218">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/nav_icon_dele"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/imageView49"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/nav_icon_right_default"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/textView218"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人："
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_333333"
            android:layout_marginTop="@dimen/size_15"
            android:layout_toRightOf="@+id/imageView54"
            android:layout_toEndOf="@+id/imageView54" />

        <TextView
            android:id="@+id/textView219"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/textView220"
            android:layout_alignBaseline="@+id/textView218"
            android:layout_alignBottom="@+id/textView218"
            android:layout_toRightOf="@+id/textView218"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_333333"/>

        <TextView
            android:id="@+id/textView220"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView219"
            android:layout_toLeftOf="@+id/imageView49"
            android:layout_toStartOf="@+id/imageView49"
            android:textSize="@dimen/sp_14"
            android:text=""
            android:textColor="@color/color_333333"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/textView221"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text=""
            android:textSize="@dimen/sp_14"
            android:layout_below="@+id/textView218"
            android:layout_alignLeft="@+id/textView218"
            android:layout_alignStart="@+id/textView218"
            android:layout_toLeftOf="@+id/textView220"
            android:layout_toStartOf="@+id/textView220" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/textView221"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:id="@+id/textView227" />
    </RelativeLayout>

</LinearLayout>