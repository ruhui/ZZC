<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <com.zzcar.zzc.views.widget.ItemIconTextIcon_
                android:id="@+id/carcomName"
                android:layout_width="match_parent"
                android:layout_height="45dp">

            </com.zzcar.zzc.views.widget.ItemIconTextIcon_>

            <com.zzcar.zzc.views.widget.ItemIconTextIcon_
                android:id="@+id/carcomType"
                android:layout_width="match_parent"
                android:layout_height="45dp">

            </com.zzcar.zzc.views.widget.ItemIconTextIcon_>

            <com.zzcar.zzc.views.widget.ItemTextEditView_
                android:id="@+id/legalPerson"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                >

            </com.zzcar.zzc.views.widget.ItemTextEditView_>

            <com.zzcar.zzc.views.widget.ItemTextEditView_
                android:id="@+id/personCard"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                >

            </com.zzcar.zzc.views.widget.ItemTextEditView_>


            <com.zzcar.zzc.views.widget.ItemTextEditView_
                android:id="@+id/BusinesLicense"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                >

            </com.zzcar.zzc.views.widget.ItemTextEditView_>

            <com.zzcar.zzc.views.widget.ItemIconTextIcon_
                android:id="@+id/carcomAddress"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp">

            </com.zzcar.zzc.views.widget.ItemIconTextIcon_>

            <com.zzcar.zzc.views.widget.ItemTextEditView_
                android:id="@+id/carcomDetailAddress"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                >

            </com.zzcar.zzc.views.widget.ItemTextEditView_>

            <TextView
                android:id="@+id/txtAlert"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:textColor="@color/app_red"
                android:textSize="@dimen/sp_14"
                android:text=""
                android:layout_marginTop="50dp"
                android:visibility="visible"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>