<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f8f9"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.zzcar.zzc.activities.LoginAcitivty">

    <com.zzcar.zzc.views.widget.NavBar2_
        android:id="@+id/mNavbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:gravity="bottom"
        android:background="@color/white"
        app:title_res="@string/tab_mine">
    </com.zzcar.zzc.views.widget.NavBar2_>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/default_login"
        android:layout_below="@+id/mNavbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:id="@+id/imageView21" />

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView21"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="@dimen/size_15"
        android:layout_marginRight="@dimen/size_15"
        android:background="@drawable/shape_radio_line_red">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/nav_icon_number"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:id="@+id/imageView22"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="phone"
            android:ems="10"
            android:hint="请输入电话号码"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"
            android:background="@null"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:id="@+id/editText8"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView22" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_radio_line_red"
        android:layout_below="@+id/relativeLayout5"
        android:layout_alignRight="@+id/relativeLayout5"
        android:layout_alignEnd="@+id/relativeLayout5"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/relativeLayout5"
        android:layout_alignStart="@+id/relativeLayout5"
        android:id="@+id/relativeLayout6">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/nav_icon_lock"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:id="@+id/imageView23"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="phone"
            android:ems="10"
            android:hint="请输入电话号码"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"
            android:background="@null"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:id="@+id/editText9"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView23" />
    </RelativeLayout>

    <Button
        android:text="登录"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/button2"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_red_radio"
        android:layout_below="@+id/relativeLayout6"
        android:layout_alignLeft="@+id/relativeLayout6"
        android:layout_alignStart="@+id/relativeLayout6"
        android:layout_alignRight="@+id/relativeLayout6"
        android:layout_alignEnd="@+id/relativeLayout6" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:text="注册"
        android:background="@drawable/shape_red_radio"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

    <TextView
        android:id="@+id/textView101"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="right"
        android:layout_alignEnd="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_below="@+id/button2"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/app_red"
        android:text="忘记密码" />
</RelativeLayout>
