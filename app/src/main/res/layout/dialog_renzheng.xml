<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="329dp"
        android:layout_height="283dp"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_radio_white"
        android:id="@+id/relativeLayout3">

        <RelativeLayout
            android:id="@+id/relaCanle"
            android:layout_width="match_parent"
            android:layout_height="46dp">


            <TextView
                android:id="@+id/textView73"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="取消"
                android:textSize="16sp"
                android:gravity="right|center"
                android:layout_marginRight="30dp"
                android:textColor="@color/app_red"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_below="@+id/relaCanle"
            android:id="@+id/view5" />
        
        <ImageView
            android:layout_width="242dp"
            android:layout_height="145dp"
            android:layout_below="@+id/view5"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView17"
            android:src="@drawable/nav_image_ad_tanchuang"/>
        
        <TextView
            android:id="@+id/cameraTxt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="拍照"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/app_red"
            android:layout_below="@+id/imageView17"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_below="@+id/cameraTxt"/>

        <TextView
            android:id="@+id/selectPhoto"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/app_red"
            android:text="从相册选择"
            android:layout_below="@+id/view1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

</RelativeLayout>