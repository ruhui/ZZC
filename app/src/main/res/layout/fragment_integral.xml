<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.zzcar.zzc.views.widget.NavBar2_
        android:id="@+id/mNavbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:gravity="bottom"
        android:background="@color/white"
        app:title_res="@string/tab_mine">
    </com.zzcar.zzc.views.widget.NavBar2_>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="@drawable/nav_pic_jifen"
        >

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            app:srcCompat="@drawable/nav_icon_jifen"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/textView74"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前积分"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/imageView18"
            android:layout_toRightOf="@+id/imageView18"
            android:layout_toEndOf="@+id/imageView18"
            android:layout_alignBottom="@+id/imageView18" />

        <TextView
            android:id="@+id/textView75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView74"
            android:layout_alignStart="@+id/textView74"
            android:layout_below="@+id/textView74"
            android:text="0.00"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textView76"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=">"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/textView77"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/textView76"
            android:layout_toStartOf="@+id/textView76"
            android:text="购买积分"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="12sp"
        android:text="积分明细"
        android:gravity="center|left"
        android:paddingLeft="18dp"
        android:background="#f0f0f0"
        android:textColor="#959595"/>

    <com.zzcar.zzc.views.widget.pullview.PullRecyclerView_
        android:id="@+id/pull_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line2"
        >

    </com.zzcar.zzc.views.widget.pullview.PullRecyclerView_>
</LinearLayout>