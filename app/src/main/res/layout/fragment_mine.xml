<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/relativeLayout2">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/nav_icon_head_default"
                android:scaleType="centerCrop"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/imageView5" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView5"
                android:layout_marginLeft="28dp"
                android:layout_marginStart="28dp"
                android:textSize="16sp"
                android:textColor="@color/color_090909"
                android:layout_toEndOf="@+id/imageView5"
                android:layout_toRightOf="@+id/imageView5"
                android:text=" " />

            <TextView
                android:id="@+id/textView46"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="12sp"
                android:layout_marginLeft="6dp"
                android:textColor="@color/color_090909"
                android:layout_alignBottom="@+id/textView45"
                android:layout_toRightOf="@+id/textView45"
                android:layout_toEndOf="@+id/textView45" />

            <TextView
                android:id="@+id/textView47"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView45"
                android:layout_alignStart="@+id/textView45"
                android:layout_below="@+id/textView45"
                android:textSize="11sp"
                android:layout_marginTop="10dp"
                android:textColor="#989898"
                android:text=" " />


            <ImageView
                android:id="@+id/mid_rightImg"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/nav_icon_right_default"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="67dp"
                android:layout_marginRight="15dp"
                />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeLayout2"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/relaMineMoney"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/textView49"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的钱包"
                    android:textSize="12sp"
                    android:textColor="#6c6c6c"
                    android:layout_below="@+id/textView48"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="13dp" />

                <TextView
                    android:id="@+id/textView48"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/color_090909"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relaMinePoin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView51"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#6c6c6c"
                    android:text="我的积分"
                    android:layout_below="@+id/textView50"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="13dp" />

                <TextView
                    android:id="@+id/textView50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="0"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/color_090909"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relaMineMark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView52"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:text="我的二维码"
                    android:textSize="12sp"
                    android:textColor="#6c6c6c"
                    android:layout_below="@+id/imageView6"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/nav_icon_erweima"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

        <com.zzcar.zzc.views.widget.ItemViewThird_
            android:id="@+id/mybuyItem"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp">

        </com.zzcar.zzc.views.widget.ItemViewThird_>

        <com.zzcar.zzc.views.widget.ItemViewThird_
            android:id="@+id/mysaleItem"
            android:layout_width="match_parent"
            android:layout_height="49dp">

        </com.zzcar.zzc.views.widget.ItemViewThird_>

        <com.zzcar.zzc.views.widget.ItemViewThird_
            android:id="@+id/mycarItem"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp">

        </com.zzcar.zzc.views.widget.ItemViewThird_>
        <com.zzcar.zzc.views.widget.ItemViewThird_
            android:id="@+id/myapplybuyItem"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        </com.zzcar.zzc.views.widget.ItemViewThird_>
        <com.zzcar.zzc.views.widget.ItemViewThird_
            android:id="@+id/myaskItem"
            android:layout_width="match_parent"
            android:layout_height="49dp">

        </com.zzcar.zzc.views.widget.ItemViewThird_>


        <com.zzcar.zzc.views.widget.ItemViewThird_
            android:id="@+id/orderingItem"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp">

        </com.zzcar.zzc.views.widget.ItemViewThird_>
        <com.zzcar.zzc.views.widget.ItemViewThird_
            android:id="@+id/mysaveItem"
            android:layout_width="match_parent"
            android:layout_height="49dp">

        </com.zzcar.zzc.views.widget.ItemViewThird_>

        <com.zzcar.zzc.views.widget.ItemViewThird_
            android:id="@+id/settingItem"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="12dp">

        </com.zzcar.zzc.views.widget.ItemViewThird_>
    </LinearLayout>

    </ScrollView>
</LinearLayout>